</head>
<body>
    <section id="Navbar">
        <div class="container">
            <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
              <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-symmetry-vertical" viewBox="0 0 16 16">
                    <path d="M7 2.5a.5.5 0 0 0-.939-.24l-6 11A.5.5 0 0 0 .5 14h6a.5.5 0 0 0 .5-.5zm2.376-.484a.5.5 0 0 1 .563.245l6 11A.5.5 0 0 1 15.5 14h-6a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .376-.484M10 4.46V13h4.658z"/>
                  </svg>
                <span class="fs-4 title1">MİRROR</span>
              </a>
              
                <div style="
                  display: flex;
                  justify-content:space-between;

                
                  transform: translateX(-100%);
              ">
                <form style="display: flex;
                justify-content:space-between;
                align-items: center;" action="/filter" method="post">
                <span><input name="aday_name" placeholder="Aday ismi"  type="text" ></span>
                <button style="width: 30%; padding-bottom:0,0; margin-left:30px;" >Ara</button>
              </form>
            </div>
                <a id="show-login" href="#"><button style="font-size:small;" onclick="document.getElementById('id01').style.display='block'">Filtrele</button></a>
                
      <div id="id01" class="modal">
  
        <form class="modal-content animate" action="/filter" method="post">
          <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
             <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-symmetry-vertical" viewBox="0 0 16 16">
                <path d="M7 2.5a.5.5 0 0 0-.939-.24l-6 11A.5.5 0 0 0 .5 14h6a.5.5 0 0 0 .5-.5zm2.376-.484a.5.5 0 0 1 .563.245l6 11A.5.5 0 0 1 15.5 14h-6a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .376-.484M10 4.46V13h4.658z"/>
              </svg>
              
          </div>
      
          <div class="container">
            <label>Tarih</label>
              <select name="date" class="form-select" aria-label="select example" id="date">
                <option value="">Tarihe göre sırala</option>
                <option value="1">En yakın</option>
                <option value="2">En eski</option>
              </select>
              
              <label>Branş</label>
              <select name="brans" class="form-select" aria-label="select example" id="brans">
                <option value=""><b>Branşa göre sırala</b></option>
                <option value="1">Türkçe</option>
                <option value="2">İlköğretim Matematik</option>
                <option value="3">Lise Matematik</option>
                <option value="4">Fen ve Teknoloji</option>
                <option value="5">Sosyal Bilimler</option>
                <option value="6">Türk Dili ve Edebiyatı</option>
                <option value="7">Tarih</option>
                <option value="8">Din Kültürü ve Ahlak Bilgisi</option>
                <option value="9">Psikolojik Danışman/Rehberlik</option>
                <option value="10">Okul Öncesi</option>
                <option value="11">Sınıf Öğretmenliği</option>
                <option value="12">Kimya</option>
                <option value="13">Fizik</option>
                <option value="14">Biyoloji</option>
                <option value="15">Coğrafya</option>
                <option value="16">İngilizce</option>
                <option value="17">Almanca</option>
              </select>
              
              <input type="checkbox" id="filterCheckbox" name="filterCheckbox">
              <label for="filterCheckbox">Tüm filtreleri kaldır</label><br>
              
            <button style="width:10%;"type="submit">Filtrele</button>
          </div>

          
      
          
        </form>
      </div>
           
            </header>
          </div>
    </section>
    <div align="center">
        <table border="1px">
            <thead>
                <tr>
                    <th style="padding: 8px;">Ad</th>
                    <th style="padding: 8px;">E-mail</th>
                    <th style="padding: 8px;">Cinsiyet</th>
                    <th style="padding-left:50px;">Brans</th>
                    <th style="padding: 8px;">Tarih</th>
                </tr>
            </thead>
            <tbody>
                <% aday.forEach(rec => { %>
                    <tr onclick="window.location.href = '/test/' + '<%= rec.id %>';" style="cursor: pointer;">
                        <td style="padding: 8px;"><%= rec.ad %></td>
                        <td style="padding: 8px;"><%= rec.mail %></td>
                        <td style="padding: 8px;"><%= rec.cinsiyet %></td>
                        <td style="padding: 8px;"><%= rec.brans %></td>
                        <td style="padding: 8px;"><%= rec.tarih.toLocaleString('tr-TR', { dateStyle: 'medium', timeStyle: 'short' }) %></td>
                    </tr>
                    
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
