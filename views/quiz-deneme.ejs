<body>
   <div class="progress-bar">
        <div class="time">
            01:20
        </div>
        <div class="bar">
          
        </div>
    </div>
    <div id="title-hidden" class="title-desc">
        <div style="padding-bottom: 20px;">
            <span style="font-size:30px;">Merhaba <%= name %></span>
            <input  name="kullanici_id" type="hidden" value="<%= kullanici_id %>">
        </div>
        
            <div style="padding: 20px;">
            <h6 >Test iki bölümden oluşmaktadır , 10 soru çift cevaplı ve 10 soru <span style="color:purple;">Evet</span>/<span style="color:green">Hayır</span></h5>
                <hr>
            <h6>Lütfen çift cevaplı soruların cevaplarının ikisini de paunlayın , toplamları sekizi geçmemeli</h5>
                <hr>
            <h6>1 beni hiç yansıtmıyor , 7 tamamen beni yansıtıyor</h5>
            </div>
        </div>
    <div class="viewBox">
       
        <div class="view">
            <svg  viewBox="0 0 500 120" preserveAspectRatio="xMinYMin meet">
                <path d="M0,120 L100,110 240,116 L300,110 400,120 L500,108 500,120 L500,0 L0,0 Z" style="stroke: none; fill:#33a474;"></path>
            </svg>
        </div>
        <div class="title-desc">
            <div style="padding-bottom: 20px;">
            <span >Merhaba <%= name %></span>
            <input  name="kullanici_id" type="hidden" value="<%= kullanici_id %>">
        </div>
        
            <h5>Test iki bölümden oluşmaktadır , 10 soru çift cevaplı ve 10 soru Evet/Hayır</h5>
            <h5>Lütfen çift cevaplı soruların cevaplarının ikisini de paunlayın , toplamları sekizi geçmemeli</h5>
            <h5>1 beni hiç yansıtmıyor , 7 tamamen beni yansıtıyor</h5>
        </div>
        <div class="desc" id="first-desc">
            <div>
                <img src="/images/son.png" alt="Resim" width="250px" height="250px">
            </div>
            <div>
                <span>Çift cevaplı soruların cevaplarına tıklayıp 1 ve 7 arasında puanlayın</span>
            </div>
        </div>
        <div class="desc" id="second-desc">
            <div>
                <img src="/images/EH-son.png" alt="Resim" width="250px" height="250px">
            </div>
            <div>
                <span>Evet hayır sorularını üzerlerine tıklayarak cevaplayabilirsiniz</span>
            </div>
        </div>
    </div>
    
    
       
    <div class="main-class">
        <div class="container">
            <% sorularCevaplar.forEach((soru, index) => { %>
                 
                
            <div class="main-content">
                <div class="board">
                    <form method="post" name="<%= kullanici_id %>" id="form<%= index %>" class="form">
                    <div class="question">
                        <span id="s-question"><%= soru.soru %></span>
                    </div>
                    <div id="board-<%= index %>" class="answers-class">
                        <div class="answer-container">
                        <div class="ans-1">
                            <div class="answer-question">
                                <span><a style="color:rgb(55, 54, 54);text-decoration:none;font-size: 19px;" class="aTag">
                                    <span class="q-span"><%= soru.secenek1 %></span>
                                      </a>
                                </span>
                            </div>
                            <div class="answer-radio-1">
                                <input type="radio" id="a-1-<%= index %>" name="a-<%= index %>" value="1">
                                <label class="ans-low-1-def" for="a-1-<%= index %>"></label>
                            
                                <input type="radio" id="a-2-<%= index %>" name="a-<%= index %>" value="2">
                                <label class="ans-low-2-def" for="a-2-<%= index %>"></label>
                            
                                <input type="radio" id="a-3-<%= index %>" name="a-<%= index %>" value="3">
                                <label class="ans-low-3-def" for="a-3-<%= index %>"></label>
                            
                                <input type="radio" id="a-4-<%= index %>" name="a-<%= index %>" value="4">
                                <label class="ans-mid-def" for="a-4-<%= index %>"></label>
                            
                                <input type="radio" id="a-5-<%= index %>" name="a-<%= index %>" value="5">
                                <label class="ans-high-1-def" for="a-5-<%= index %>"></label>
                            
                                <input type="radio" id="a-6-<%= index %>" name="a-<%= index %>" value="6">
                                <label class="ans-high-2-def" for="a-6-<%= index %>"></label>
                            
                                <input type="radio" id="a-7-<%= index %>" name="a-<%= index %>" value="7">
                                <label class="ans-high-3-def" for="a-7-<%= index %>"></label>
                            </div>
                        </div>
                    </div>
                    <div class="answer-container">
                        <div class="ans-2">
                            <div class="answer-question-1">
                                <span><a class="bTag" style="color:rgb(55, 54, 54);text-decoration:none;font-size:19px;">
                                    <span class="q-span"><%= soru.secenek2 %></span>
                                </a></span>
                            </div>
                            <div class="answer-radio-2">
                                <input type="radio" id="b-1-<%= index %>" name="b-<%= index %>" value="1">
                                <label class="ans-low-1-def" for="b-1-<%= index %>"></label>
                            
                                <input type="radio" id="b-2-<%= index %>" name="b-<%= index %>" value="2">
                                <label class="ans-low-2-def" for="b-2-<%= index %>"></label>
                            
                                <input type="radio" id="b-3-<%= index %>" name="b-<%= index %>" value="3">
                                <label class="ans-low-3-def" for="b-3-<%= index %>"></label>
                            
                                <input type="radio" id="b-4-<%= index %>" name="b-<%= index %>" value="4">
                                <label class="ans-mid-def" for="b-4-<%= index %>"></label>
                            
                                <input type="radio" id="b-5-<%= index %>" name="b-<%= index %>" value="5">
                                <label class="ans-high-1-def" for="b-5-<%= index %>"></label>
                            
                                <input type="radio" id="b-6-<%= index %>" name="b-<%= index %>" value="6">
                                <label class="ans-high-2-def" for="b-6-<%= index %>"></label>
                            
                                <input type="radio" id="b-7-<%= index %>" name="b-<%= index %>" value="7">
                                <label class="ans-high-3-def" for="b-7-<%= index %>"></label>
                            </div>
                        </div>
                    </div>
                    </div> 
                    </form>
                    <hr>
                </div>
            </div>
            <% }); %>
            <% evet_hayir.forEach((ques,index)=> { %>
                <div class="main-content">
                    <div class="board">
                        <form method="post" id="form2<%= index %>" class="form2">
                            <div class="question">
                                <span id="s-question"><%=ques.bsoru%></span>
                            </div>
                            <div class="answers-class-y">
                                <div id="ans-1" class="special-radio1">
                                    <input type="radio" id="y-<%= index %>" name="e-<%= index %>" value="Evet">
                                    <label class="label-yes" for="y-<%= index %>">Evet</label>
                                </div>
                                <div id="ans-2" class="special-radio2">
                                    <input type="radio" id="n-<%= index %>" name="e-<%= index %>" value="Hayır">
                                    <label class="label-no" for="n-<%= index %>">Hayır</label>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <hr>
            <% }) %>
            
            <button  id="gonder-butonu">Kaydet</button>
          <script src="/js/quiz-post.js" type="text/javascript"></script> 
        </div>
    </div>
